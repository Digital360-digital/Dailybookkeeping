<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8">

    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:text="Hello World!"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/claer1Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cal_delete_background"
            android:text="@string/back"
            android:textColor="@color/text_color"
            android:textSize="40dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/deleteId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cal_delete_background"
            android:text="C"
            android:textColor="@color/text_color"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/cBtn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="7"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="8"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="9"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtnDivided"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cal_oparator_background"
            android:text="/"
            android:textColor="@color/text_color"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/cBtn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="4"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="5"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="6"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtnMulty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cal_oparator_background"
            android:text="x"
            android:textColor="@color/text_color"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/cBtn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="1"
            android:textColor="@color/text_color"
            android:onClick="one"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="2"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="3"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cal_oparator_background"
            android:text="-"
            android:textColor="@color/text_color"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/cBtn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="@string/zero"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_number_background"
            android:text="."
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtnEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/cal_oparator_background"
            android:text="="
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cBtnSum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cal_oparator_background"
            android:text="+"
            android:textColor="@color/text_color"
            android:textSize="15dp" />


    </LinearLayout>


</LinearLayout>